@model BasketViewModel


<div class="cart-total">
    <span class="text-number">
        @Model.Items.Count
    </span>
    <span class="text-item">
        Shopping Cart
    </span>
    <span class="price">
        £@Model.Total.ToString("0.00")
        <i class="fas fa-chevron-down"></i>
    </span>
</div>
<div class="cart-dropdown-block">

    @foreach (var item in Model.Items)
    {
        <div class=" single-cart-block ">
            <div class="cart-product">
                <a asp-action="details" asp-controller="Book" asp-route-id="@item.Book.Id" class="image">
                    <img src="~/Uploads/Books/@item.Book.BookImages.FirstOrDefault(x=> x.PosterStatus == true)?.Image" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a asp-action="details" asp-controller="Book" asp-route-id="@item.Book.Id">
                            @item.Book.Name
                        </a>
                    </h3>
                    <p class="price"><span class="qty">@item.Count ×</span> £@((item.Book.SalePrice * (100 - item.Book.DiscountPercent) / 100).ToString("0.00"))</p>
                    <a asp-action="deleteItem" asp-controller="book" asp-route-bookId="@item.Book.Id" class="removeItem cross-btn"><i class="fas fa-times"></i></a>
                </div>
            </div>
        </div>

    }
    <div class="btn-block">
        <a href="cart.html" class="btn">
            View Cart <i class="fas fa-chevron-right"></i>
        </a>
        <a asp-action="Checkout" asp-controller="Order" class="btn btn--primary">
            Check Out <i class="fas fa-chevron-right"></i>
        </a>
    </div>
</div>
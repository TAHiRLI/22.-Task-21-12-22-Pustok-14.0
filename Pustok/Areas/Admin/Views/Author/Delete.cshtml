
@{
    ViewData["Title"] = "Delete";
}
@model Author
<h1>Delete</h1>

<div class="container">

    <table class="table table-striped table-light" id="datatablesSimple">
        <thead>
            <tr>
                <th>Author</th>
                <th>Book Count</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Model.FullName</td>
                <td>@Model.Books.Count</td>
            </tr>
        </tbody>

    </table>

    <form asp-action="delete" method="post" class="form-control">
        <input hidden asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="index" asp-controller="Author" class="btn btn-primary">Cancel</a>

    </form>


</div>




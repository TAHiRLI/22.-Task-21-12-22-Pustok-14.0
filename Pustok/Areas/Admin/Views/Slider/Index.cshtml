
@{
    ViewData["Title"] = "Index";
    int order = 0;
}
@model List<Slider>

<main>
    <div class="container-fluid px-4">
       
        <div class="card mb-4">
        </div>
        <div class="card mb-4">
            <div class="card-header row">
                <div class="col-md-6">
                    <i class="fas fa-table me-1"></i>
                    DataTable Example
                </div>
                <div class="col-md-6 text-end">
                    <a class="btn btn-success" asp-action="create" asp-controller="slider"><i class="fas fa-plus"></i></a>
                </div>

            </div>
            <div class="card-body">
                <table class="table table-striped table-light" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Title 1</th>
                            <th>Title 2</th>
                            <th>Desc</th>
                            <th>Button Text</th>
                            <th>Redirected Url</th>
                            <th>Image</th>
                            <th>Order</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var slider in Model)
                        {
                            order++;

                            <tr>
                                <td>@order</td>
                                <td>@slider.Title1</td>
                                <td>@slider.Title2</td>
                                <td>@slider.Desc</td>
                                <td>@slider.BtnText</td>
                                <td>@slider.RedirectedUrl</td>
                                <td> <img width="100px" src="~/Uploads/Sliders/@slider.Image" /> </td>
                                <td>@slider.Order</td>

                                <td class=" row">
                                    <a class="btn btn-danger trash-btn" asp-action="delete" asp-controller="slider" asp-route-id="@slider.Id">Delete</a>
                                    <a class="btn btn-primary" asp-action="edit" asp-controller="slider" asp-route-id="@slider.Id">Edit</a>
                                </td>

                            </tr>

                        }



                    </tbody>
                </table>

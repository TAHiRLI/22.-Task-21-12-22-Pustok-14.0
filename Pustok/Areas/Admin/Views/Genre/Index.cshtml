@model List<Genre>
@{
    int order = (ViewBag.currentPage - 1) * ViewBag.dataPerPage;
    int totalPage = ViewBag.totalPage;
    int currentPage = ViewBag.currentPage;

}


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin/dashboard/index">Dashboard</a></li>
            <li class="breadcrumb-item active">Tables</li>
        </ol>
        <div class="card mb-4">
        </div>
        <div class="card mb-4">
            <div class="card-header row">
                <div class="col-md-6">
                    <i class="fas fa-table me-1"></i>
                    DataTable Example
                </div>
                <div class="col-md-6 text-end">
                    <a class="btn btn-success" asp-action="create" asp-controller="Genre"><i class="fas fa-plus"></i></a>
                </div>

            </div>
            <div class="card-body">
                <table class="table table-striped table-light" id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>No</th>

                            <th>Genre</th>
                            <th>Book Count</th>
                            <th>Action</th>


                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var genre in Model)
                        {
                            order++;

                            <tr>
                                <td>@order</td>
                                <td>@genre.Name</td>
                                <td>@genre.Books.Count</td>
                                <td>
                                    <a class="btn btn-danger" asp-action="delete" asp-controller="genre" asp-route-id="@genre.Id">Delete</a>
                                    <a class="btn btn-primary" asp-action="edit" asp-controller="genre" asp-route-id="@genre.Id">Edit</a>
                                </td>

                            </tr>

                        }



                    </tbody>
                </table>
                <div class="col-12 ">

                    <nav class="m-auto" aria-label="...">
                        <ul class="pagination">

                            <li class="page-item @(currentPage==1? "disabled":"")">
                                <a class="page-link" asp-action="index" asp-controller="genre" asp-route-page="@(currentPage-1)">Previous</a>
                            </li>
                            @{

                                //yazdigim en iyrenc alqoritm ola biler :)


                                if (totalPage <= 5)
                                {
                                    for (int i = 1; i <= totalPage; i++)
                                    {
                                        <li class="page-item @(currentPage == i? "active":"")"><a class="page-link" asp-action="index" asp-controller="Genre" asp-route-page="@i">@i</a></li>

                                    }
                                }
                                else if(currentPage <4 && totalPage <=5 ){
                                    for (int i = 1; i <= totalPage; i++)
                                    {
                                        <li class="page-item @(currentPage == i? "active":"")"><a class="page-link" asp-action="index" asp-controller="Genre" asp-route-page="@i">@i</a></li>

                                    }
                                }
                                else if (currentPage < 4)
                                {
                                    for (int i = 1; i <= 5; i++)
                                    {
                                        <li class="page-item @(currentPage == i? "active":"")"><a class="page-link" asp-action="index" asp-controller="Genre" asp-route-page="@i">@i</a></li>

                                    }
                                }
                                else if (totalPage >= 5 && currentPage <= totalPage - 2 && currentPage > 2)
                                {
                                    for (int i = currentPage - 2; i <= currentPage + 2; i++)
                                    {
                                        <li class="page-item @(currentPage == i? "active":"")"><a class="page-link " asp-action="index" asp-controller="Genre" asp-route-page="@i">@i</a></li>

                                    }
                                }
                                else if (currentPage > totalPage - 2 && currentPage <= totalPage)
                                {
                                    for (int i = totalPage-4; i <=totalPage; i++)
                                    {
                                        <li class="page-item @(currentPage == i? "active":"")"><a class="page-link" asp-action="index" asp-controller="Genre" asp-route-page="@i">@i</a></li>

                                    }
                                }


                            }





                            <li class="page-item @(currentPage==totalPage? "disabled":"")">
                                <a class="page-link" asp-action="index" asp-controller="genre" asp-route-page="@(currentPage+1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>


            </div>
        </div>
    </div>
</main>
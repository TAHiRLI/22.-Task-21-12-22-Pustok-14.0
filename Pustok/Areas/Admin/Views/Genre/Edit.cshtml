
@{
    ViewData["Title"] = "Edit";
}
@model Genre

<h1>Edit</h1>

<div class="container">

    <div class="row col-md-8">
        <form asp-action="edit" method="post" class="form-control">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control my-2" />
            <span class="text-danger"  asp-validation-for="Name"></span><br />
            <button type="submit" class="btn btn-outline-success">Change</button>
        </form>
    </div>
</div>

